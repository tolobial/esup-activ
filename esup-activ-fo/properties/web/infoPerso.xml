<?xml version="1.0" encoding="UTF-8" ?>

<beans 
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd"
	>

	<bean
		id="beanDisplayName"
		class="org.esupportail.activfo.web.beans.BeanFieldImpl"
		scope="session"
		>

		<property name="key" value="PERSOINFO.DISPLAYNAME.TEXT.LABEL"/>
		<property name="validator" ref="validatorDisplayName"/>
		<property name="help" value="PERSOINFO.DISPLAYNAME.TEXT.HELP"/>
		<property name="required" value="true" />
		<property name="isMultiValue" value="false"/>
		<property name="divName" value="displayname"/>
		
	</bean>
	
	<bean
		id="beanEmailPerso"
		class="org.esupportail.activfo.web.beans.BeanFieldImpl"
		scope="session"
		>
		<property name="key" value="PERSOINFO.MAILPERSO.TEXT.LABEL"/>
		<property name="validator" ref="validatorEmail"/>
		<property name="required" value="false" />
		<property name="isMultiValue" value="false"/>
		<property name="divName" value="emailPerso"/>
	</bean>
	
	<bean
		id="beanMobilePhone"
		class="org.esupportail.activfo.web.beans.BeanFieldImpl"
		scope="session"
		>
		<property name="key" value="PERSOINFO.MOBILE.TEXT.LABEL"/>
		<property name="validator" ref="validatorMobilePhone"/>
		<property name="required" value="false" />
		<property name="isMultiValue" value="false"/>
		<property name="divName" value="mobilePhone"/>
	</bean>
	
	<bean
		id="beanSMSAgreement"
		class="org.esupportail.activfo.web.beans.BeanFieldImpl"
		scope="session"
		>
		<property name="key" value="PERSOINFO.SMSAGREEMENT.TEXT.LABEL"/>
		<property name="fieldType" value="selectBooleanCheckbox"/>
		<property name="converter" ref="smsAgreementConverter"/>
		<property name="isMultiValue" value="false"/>
		<property name="divName" value="smsAgreement"/>
	</bean>
	
	<bean  
		id="beanEduPersonPrimaryAffiliation"
		class="org.esupportail.activfo.web.beans.BeanFieldImpl"
		scope="session"
		>
		<property name="key" value="PERSOINFO.EDUPERSONPRIMARYAFFILIATION.TEXT.LABEL"/>
		<property name="required" value="false" />
		<property name="isMultiValue" value="false"/>
		<property name="divName" value="eduPersonPrimaryAffiliation"/>
	</bean>
	
	<bean  
		id="beanEduPersonAffiliation"
		class="org.esupportail.activfo.web.beans.BeanFieldImpl"
		scope="session"
		>
		<property name="key" value="PERSOINFO.EDUPERSONAFFILIATION.TEXT.LABEL"/>
		<property name="required" value="false" />
		<property name="isMultiValue" value="true"/>
		<property name="divName" value="eduPersonAffiliation"/>
		<property name="numberOfValue" value="5"></property>
	</bean>
	

</beans>
