<?xml version="1.0"?>

<!-- 
	/webapp/WEB-INF/web.xml
	The main configuration file of the application for servlet installations.
-->

<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<display-name>esup-activ-fo</display-name>
	
	     <context-param>
                <param-name>webAppRootKey</param-name>
                <param-value>esup-activ-fo</param-value>
        </context-param>	

	<context-param>
		<param-name>log4jConfigLocation</param-name>
		<param-value>classpath:log4j.properties</param-value>
	</context-param>

	<context-param>
		<description>
			The location of the main configuration file of the Spring framework.
		</description>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			classpath:/properties/applicationContext.xml
		</param-value>
	</context-param>
	
	
	<context-param>
		<description>
			The location of the main configuration file of the JSF framework.
		</description>
		<param-name>javax.faces.CONFIG_FILES</param-name>
		<param-value>
			/WEB-INF/classes/properties/jsf/commons-render-kit.xml,/WEB-INF/classes/properties/jsf/navigation-rules.xml,/WEB-INF/classes/properties/jsf/application.xml,/WEB-INF/classes/properties/jsf/fck-faces-config.xml,/WEB-INF/classes/properties/jsf/commons-pattern-faces-config.xml
		</param-value>
	</context-param>

	<context-param>
		<param-name>org.fckfaces.CUSTOM_CONFIGURATIONS_PATH</param-name>
		<param-value>/media/FCKeditor/custom-fckconfig.js</param-value>
	</context-param>

	<context-param>
		<param-name>org.apache.myfaces.PRETTY_HTML</param-name>
		<param-value>true</param-value>
	</context-param>

	<context-param>
		<param-name>org.apache.myfaces.ALLOW_JAVASCRIPT</param-name>
		<param-value>true</param-value>
	</context-param>

	<context-param>
		<param-name>org.apache.myfaces.DETECT_JAVASCRIPT</param-name>
		<param-value>false</param-value>
	</context-param>

	<context-param>
		<param-name>org.apache.myfaces.AUTO_SCROLL</param-name>
		<param-value>false</param-value>
	</context-param>

	<context-param>
		<param-name>org.apache.myfaces.ADD_RESOURCE_CLASS</param-name>
		<param-value>org.apache.myfaces.renderkit.html.util.DefaultAddResource</param-value>
	</context-param>

<!--BEGIN-SERVLET-ONLY-->
	<context-param>
		<param-name>org.apache.myfaces.CHECK_EXTENSIONS_FILTER</param-name>
		<param-value>true</param-value>
	</context-param>
 <!--END-SERVLET-ONLY-->

<!--BEGIN-PORTLET-ONLY-->
	<context-param>
		<param-name>org.apache.myfaces.CHECK_EXTENSIONS_FILTER</param-name>
		<param-value>false</param-value>
	</context-param>
<!--END-PORTLET-ONLY-->

	<context-param>
		<description>
			The logout URL of the CAS server.
		</description>
		<param-name>edu.yale.its.tp.cas.client.logoutUrl</param-name>
		<param-value>
			${cas.url}/logout?service=%s
		</param-value>
	</context-param>

	<listener>
		<listener-class>
			org.springframework.web.util.Log4jConfigListener
		</listener-class>
	</listener>

	<listener>
		<listener-class>
			org.springframework.web.context.ContextLoaderListener
		</listener-class>
	</listener>


	<context-param>
        <param-name>edu.yale.its.tp.cas.proxyUrl</param-name>
        <param-value>${cas.url}/proxy</param-value>
	</context-param>

<!--BEGIN-SERVLET-ONLY-->
	<filter>
		<description>
			The CAS filter, used to authenticate users.
		</description>
		<display-name>CASFilter</display-name>
		<filter-name>CAS Filter</filter-name>
		<filter-class>
			edu.yale.its.tp.cas.client.filter.CASFilter
		</filter-class>
		<init-param>
			<param-name>
				edu.yale.its.tp.cas.client.filter.loginUrl
			</param-name>
			<param-value>
				${cas.url}/login
			</param-value>
		</init-param>
		<init-param>
			<param-name>
				edu.yale.its.tp.cas.client.filter.validateUrl
			</param-name>
			<param-value>
				${cas.url}/serviceValidate
			</param-value>
		</init-param>
		<init-param>
			<param-name>
				edu.yale.its.tp.cas.client.filter.serverName
			</param-name>
			<param-value>${tomcat.host}${tomcat.port.string}</param-value>
		</init-param>
		<init-param>
            <param-name>edu.yale.its.tp.cas.client.filter.proxyCallbackUrl</param-name>
            <param-value>https://${tomcat.host}${tomcat.port.string}/CasProxyServlet</param-value>
        </init-param>	
		<init-param>
			<param-name>
				edu.yale.its.tp.cas.client.filter.wrapRequest
			</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>CAS Filter</filter-name>
		<url-pattern>/stylesheets/welcomeCas.faces</url-pattern>		 
	</filter-mapping>	
	<filter-mapping>
		<filter-name>CAS Filter</filter-name>
		<url-pattern>/stylesheets/accountDataChange.faces</url-pattern>		 
	</filter-mapping>
 <!--END-SERVLET-ONLY-->
 	
	<servlet>
        <servlet-name>ProxyTicketReceptor</servlet-name>
        <servlet-class>edu.yale.its.tp.cas.proxy.ProxyTicketReceptor</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProxyTicketReceptor</servlet-name>
        <url-pattern>/CasProxyServlet</url-pattern>
    </servlet-mapping>
  
 <!--BEGIN-SERVLET-ONLY-->
	<servlet>
		<description>
			The main servlet of the application. This class inherits from 
			the MyFaces implementation and handles exceptions thrown for
			specific exception handling.
		</description>
		<display-name>Faces Servlet</display-name>
		<servlet-name>Faces Servlet</servlet-name>
		<servlet-class>
			org.esupportail.commons.web.servlet.FacesServlet
		</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>Faces Servlet</servlet-name>
		<url-pattern>*.faces</url-pattern>
	</servlet-mapping>
 <!--END-SERVLET-ONLY-->

<!--BEGIN-PORTLET-ONLY-->
	<servlet> 
		<servlet-name>esup-activ-fo</servlet-name>
		<servlet-class>
			org.apache.pluto.core.PortletServlet
		</servlet-class>
		<init-param>
			<param-name>portlet-class</param-name>
			<param-value>
				org.apache.portals.bridges.portletfilter.FilterPortlet
			</param-value>
		</init-param>
		<init-param>
			<param-name>portlet-guid</param-name>
			<param-value>esup-activ-fo.esup-activ-fo</param-value>
		</init-param>
        <init-param>
            <param-name>portlet-name</param-name>
            <param-value>esup-activ-fo</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>		
	</servlet>
	<servlet-mapping>
		<servlet-name>esup-activ-fo</servlet-name>
		<url-pattern>/esup-activ-fo/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
        <servlet-name>esup-activ-fo</servlet-name>
        <url-pattern>/PlutoInvoker/esup-activ-fo</url-pattern>
    </servlet-mapping>
<!--END-PORTLET-ONLY-->

	<filter>
		<description>
			This filter is needed to use some Tomahawk extentions.
		</description>
		<display-name>MyFacesExtensionsFilter</display-name>
		<filter-name>MyFacesExtensionsFilter</filter-name>
		<filter-class>
			org.apache.myfaces.webapp.filter.ExtensionsFilter
		</filter-class>
		<init-param>
			<description>
				The maximum size of uploaded files.
			</description>
			<param-name>maxFileSize</param-name>
			<param-value>20m</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>MyFacesExtensionsFilter</filter-name>
		<servlet-name>Faces Servlet</servlet-name>
	</filter-mapping>
	<filter-mapping>
		<filter-name>MyFacesExtensionsFilter</filter-name>
	    <url-pattern>/faces/myFacesExtensionResource/*</url-pattern>
	</filter-mapping>
	
	<security-constraint>
		<display-name>Protection of the raw JSP pages</display-name>
		<web-resource-collection>
			<web-resource-name>Raw JSF JSP Pages</web-resource-name>
			<description>
				All the JSP pages of the application.
			</description>
			<url-pattern>/stylesheets/about.jsp</url-pattern>
			<url-pattern>/stylesheets/administrators.jsp</url-pattern>
			<url-pattern>/stylesheets/administratorAdd.jsp</url-pattern>
			<url-pattern>/stylesheets/administratorDelete.jsp</url-pattern>
			<url-pattern>/stylesheets/accountIdentification.jsp</url-pattern>
			<url-pattern>/stylesheets/accountAuthentification.jsp</url-pattern>
			<url-pattern>/stylesheets/accountEnabled.jsp</url-pattern>
			<url-pattern>/stylesheets/accountPersonalInfo.jsp</url-pattern>
			<url-pattern>/stylesheets/accountCharter.jsp</url-pattern>
			<url-pattern>/stylesheets/accountPassword.jsp</url-pattern>			
			<url-pattern>/stylesheets/accountChoice.jsp</url-pattern>
			<url-pattern>/stylesheets/accountLogin.jsp</url-pattern>
			<url-pattern>/stylesheets/departments.jsp</url-pattern>
			<url-pattern>/stylesheets/departmentAdd.jsp</url-pattern>
			<url-pattern>/stylesheets/departmentDelete.jsp</url-pattern>
			<url-pattern>/stylesheets/departmentEdit.jsp</url-pattern>
			<url-pattern>/stylesheets/departmentView.jsp</url-pattern>
			<url-pattern>/stylesheets/departmentManagerAdd.jsp</url-pattern>
			<url-pattern>/stylesheets/departmentManagerDelete.jsp</url-pattern>
			<url-pattern>/stylesheets/departmentManagerEdit.jsp</url-pattern>
			<url-pattern>/stylesheets/exception.jsp</url-pattern>
			<url-pattern>/stylesheets/ldapSearch.jsp</url-pattern>
			<url-pattern>/stylesheets/ldapResults.jsp</url-pattern>
			<url-pattern>/stylesheets/login.jsp</url-pattern>
			<url-pattern>/stylesheets/logout.jsp</url-pattern>
			<url-pattern>/stylesheets/preferences.jsp</url-pattern>
			<url-pattern>/stylesheets/things.jsp</url-pattern>
			<url-pattern>/stylesheets/thingDelete.jsp</url-pattern>
			<url-pattern>/stylesheets/thingEdit.jsp</url-pattern>
			<url-pattern>/stylesheets/files.jsp</url-pattern>
			<url-pattern>/stylesheets/groups.jsp</url-pattern>
			<url-pattern>/stylesheets/welcome.jsp</url-pattern>
			<url-pattern>/stylesheets/_*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<description>
				No roles, so no direct access
			</description>
		</auth-constraint>
	</security-constraint>

</web-app>
